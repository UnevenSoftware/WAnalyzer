{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2016",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "incremental": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "types": [
    "vue-i18n/dist",
    "@intlify/vite-plugin-vue-i18n/client"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}